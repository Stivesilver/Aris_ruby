<h2>Users on team <%= @team.name %></h2>
<div class="col-md-8">
  <% if @users.any? %>
    <h3>Users (<%= @users.count %>)</h3>
    <ol class="users">
      <%= render @users %>
    </ol>
  <% end %>
</div>
<div>
<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:email, "Add user by email:") %>
  <%= text_field_tag(:email) %>
  <%= hidden_field_tag :team_id, @team.id %>
  <%= submit_tag("Search") %>
<% end %>

  <div class="col-md-8">
    <% if @team.projects.any? %>
      <h3>Projects (<%= @team.projects.count %>)</h3>
      <ol class="projects">
        <%= render @projects %>
      </ol>
    <% end %>
  </div>
  <%= link_to 'Create project', new_project_path(:team_id => @team.id) %>

</div>