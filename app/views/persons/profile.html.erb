<% provide(:title, "#{@user.first_name} #{@user.last_name}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= "#{@user.first_name} #{@user.last_name}" %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.teams.any? %>
      <h3>Teams (<%= @user.teams.count %>)</h3>
      <ol class="teams">
        <%= render @teams %>
      </ol>
    <% end %>
  </div>
  <%= link_to 'Create team', new_team_path %>

</div>

