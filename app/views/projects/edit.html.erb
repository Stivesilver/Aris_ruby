<h2>Update project</h2>

<%= form_for :project, method: :patch, :url => {:action => "update", :id => @project} do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary, autocomplete: "summary" %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </div>
  <%= hidden_field_tag :team_id, params[:team_id] %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>