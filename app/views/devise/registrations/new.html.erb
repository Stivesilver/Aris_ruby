<!doctype html>
<html>
  <body class="text-center">
  <div class="container" >
    <main class="form-signin">


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating">
        <%= f.text_field(:first_name, {:class => "form-control", :id => "floatingInputFirstName"}) %>
        <label for="floatingInputFirstName">First name</label>
      </div>

      <div class="form-floating">
        <%= f.text_field(:last_name, {:class => "form-control", :id => "floatingInputLastName"}) %>
        <label for="floatingInputLastName">Last name</label>
      </div>

      <div class="form-floating">
        <%= f.email_field(:email, {:class => "form-control", :id => "floatingInputEmail"}) %>
        <label for="floatingInputEmail">Email</label>
      </div>

      <div class="form-floating">
        <%= f.password_field(:password, {:class => "form-control", :id => "floatingInputPassword", :'aria-describedby' => "passwordHelpBlock"}) %>
        <label for="floatingInputPassword">Password</label>
        <div id="passwordHelpBlock" class="form-text">
          Minimum 6 symbols
        </div>
      </div>

      <div class="form-floating">
        <%= f.password_field(:password_confirmation, {:class => "form-control", :id => "floatingInputConfirmPassword"}) %>
        <label for="floatingInputConfirmPassword">Confirm password</label>
      </div>

      <div class="form-floating">
        <%= f.submit("Sign up", { :class => "w-100 btn btn-lg btn-primary"}) %>
      </div>
    <% end %>

    </main>
  </div>
  </body>
</html>